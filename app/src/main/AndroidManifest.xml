<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.muhsantech.notesonlinesaveinfirebase">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.NotesOnlineSaveInFirebase">
        <activity android:name=".activities.NoteDetails"
            android:theme="@style/myTheme">
        </activity>
        <activity android:name=".activities.EditNotesActivity"
            android:theme="@style/myTheme"/>

        <activity android:name=".activities.CreateNote" />
        <activity android:name=".activities.forgotPassword" />
        <activity android:name=".activities.SignUp" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.NotesActivity"
            android:theme="@style/myTheme" />
    </application>

</manifest>